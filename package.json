{
  "name": "pisscord",
  "version": "1.4.7",
  "description": "Private P2P Discord Clone",
  "main": "electron.js",
  "author": "P2P User",
  "scripts": {
    "dev": "vite",
    "dev:web": "vite --config vite.config.web.ts",
    "build": "tsc && vite build",
    "build:web": "tsc && vite build --config vite.config.web.ts && mv dist-web/index.web.html dist-web/index.html",
    "preview": "vite preview",
    "preview:web": "vite preview --config vite.config.web.ts",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "npm run build && electron-builder --win --x64",
    "cap:sync": "npm run build && npx cap sync",
    "cap:ios": "npx cap open ios",
    "cap:android": "npx cap open android",
    "cap:add:ios": "npx cap add ios",
    "cap:add:android": "npx cap add android"
  },
  "build": {
    "appId": "com.pisscord.app",
    "productName": "Pisscord",
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "pisscord-purple.ico"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "pisscord-purple.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false,
      "include": "installer.nsh"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "jamditis",
        "repo": "pisscord",
        "private": false
      }
    ],
    "generateUpdatesFilesForAllChannels": true
  },
  "dependencies": {
    "@capacitor-community/safe-area": "^7.0.0-beta.6",
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/clipboard": "^7.0.2",
    "@capacitor/core": "^7.4.4",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/ios": "^7.4.4",
    "@capacitor/status-bar": "^7.0.3",
    "@google/genai": "*",
    "electron-updater": "^6.6.2",
    "firebase": "^10.8.0",
    "framer-motion": "^12.23.25",
    "gsap": "^3.13.0",
    "peerjs": "^1.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.4",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "ico-to-png": "^0.2.2",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  }
}
